{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto-Doc: Generate Javadoc/Docstring",
      "type": "shell",
      "command": "python3",
      "args": [
        "${workspaceFolder}/automation/ai_doc_generator.py",
        "--file",
        "${file}",
        "--language",
        "${fileExtname}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "detail": "Addresses Documentation Drift pain point"
    },
    {
      "label": "Test-Scaffold: Create Unit Test",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}/automation/scaffold_tests.sh",
        "${fileBasenameNoExtension}",
        "${fileDirname}"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "detail": "Addresses Manual Boilerplate pain point"
    }
  ]
}
